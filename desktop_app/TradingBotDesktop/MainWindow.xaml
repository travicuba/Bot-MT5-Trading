<Window x:Class="TradingBotDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TradingBot Pro"
        Width="1100" Height="680"
        MinWidth="900" MinHeight="580"
        WindowStartupLocation="CenterScreen"
        Background="#FF0A0E27">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="38"/>
        </Grid.RowDefinitions>

        <!-- â•â• HEADER â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="0" Background="#FF080C1F">
            <Border.Effect>
                <DropShadowEffect Color="#FF000000" BlurRadius="8" ShadowDepth="2" Opacity="0.4"/>
            </Border.Effect>
            <Grid Margin="16,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="âš¡" FontSize="22" Foreground="#FF4895EF" VerticalAlignment="Center"/>
                    <TextBlock Text=" TRADINGBOT " FontSize="15" FontWeight="Bold"
                               Foreground="#FFE0E6FF" FontFamily="Consolas" VerticalAlignment="Center"/>
                    <TextBlock Text="PRO" FontSize="15" FontWeight="Bold"
                               Foreground="#FF4895EF" FontFamily="Consolas" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Border x:Name="LicenseBadge" Background="#FF1E2749" CornerRadius="4"
                            Padding="8,3" Margin="0,0,12,0">
                        <TextBlock x:Name="LicenseText" Text="FREE" FontSize="10"
                                   FontFamily="Consolas" FontWeight="Bold" Foreground="#FF8B9DC3"/>
                    </Border>
                    <TextBlock x:Name="UserLabel" Text="Usuario" Foreground="#FFE0E6FF"
                               FontFamily="Consolas" FontSize="11" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <TextBlock x:Name="ClockLabel" Text="00:00:00" Foreground="#FF8B9DC3"
                               FontFamily="Consolas" FontSize="11" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <Button x:Name="BtnHome" Content="ðŸ  Inicio" Style="{StaticResource SecondaryButton}"
                            Padding="10,4" FontSize="11" Margin="0,0,6,0"
                            Click="BtnHome_Click" Visibility="Collapsed"/>
                    <Button Content="âš™" Style="{StaticResource SecondaryButton}"
                            Width="32" Height="32" FontSize="14" Padding="0"
                            Margin="0,0,6,0" Click="BtnSettings_Click" ToolTip="ConfiguraciÃ³n"/>
                    <Button Content="â†©" Style="{StaticResource SecondaryButton}"
                            Width="32" Height="32" FontSize="14" Padding="0"
                            Click="BtnLogout_Click" ToolTip="Cerrar sesiÃ³n"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â• CONTENT FRAME â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Frame x:Name="MainFrame" Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Background="#FF0A0E27"/>

        <!-- Maintenance overlay -->
        <Border x:Name="MaintenanceOverlay" Grid.Row="0" Grid.RowSpan="3"
                Background="#EE080C1F" Visibility="Collapsed" Panel.ZIndex="99">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ”§" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="MODO MANTENIMIENTO" FontSize="24" FontWeight="Bold"
                           Foreground="#FFFFBE0B" FontFamily="Consolas"
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock x:Name="MaintenanceMsg"
                           Text="El sistema estÃ¡ siendo actualizado. Volvemos pronto."
                           Foreground="#FF8B9DC3" FontFamily="Consolas" FontSize="13"
                           HorizontalAlignment="Center" TextWrapping="Wrap"
                           MaxWidth="500" TextAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- â•â• FOOTER â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="2" Background="#FF080C1F">
            <Grid Margin="16,0">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                           Foreground="#FF4A5280" FontFamily="Consolas" FontSize="10">
                    <Run Text="TradingBot Pro v1.0.0  Â·  MT5 + BingX  Â·  AI-Powered Signals"/>
                </TextBlock>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Ellipse x:Name="Mt5StatusDot" Width="8" Height="8" Fill="#FF555555"
                             VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock Text="MT5" Foreground="#FF4A5280" FontFamily="Consolas"
                               FontSize="10" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <Ellipse x:Name="BingXStatusDot" Width="8" Height="8" Fill="#FF555555"
                             VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock Text="BingX" Foreground="#FF4A5280" FontFamily="Consolas"
                               FontSize="10" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
