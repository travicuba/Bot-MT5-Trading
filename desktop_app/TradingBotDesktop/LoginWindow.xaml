<Window x:Class="TradingBotDesktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TradingBot Pro — Iniciar Sesión"
        Width="900" Height="580"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF0A0E27"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="12" Background="#FF0A0E27"
            BorderBrush="#FF2A3060" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="520"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ══════════════════════════════════════════════════════════════
                 PANEL IZQUIERDO — Branding comercial
            ══════════════════════════════════════════════════════════════ -->
            <Border Grid.Column="0" CornerRadius="12,0,0,12" Background="#FF080C1F">
                <Grid>
                    <!-- Borde decorativo azul en la derecha -->
                    <Border HorizontalAlignment="Right" Width="3"
                            Background="#FF4895EF" Margin="0,60,0,60" CornerRadius="2"/>

                    <StackPanel VerticalAlignment="Center" Margin="50,0,60,0">

                        <!-- Logo -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="⚡" FontSize="36" Foreground="#FF4895EF" VerticalAlignment="Center"/>
                            <StackPanel Margin="12,0,0,0">
                                <TextBlock Text="TRADINGBOT" FontSize="24" FontWeight="Bold"
                                           Foreground="#FFE0E6FF" FontFamily="Consolas"/>
                                <TextBlock Text="PRO" FontSize="24" FontWeight="Bold"
                                           Foreground="#FF4895EF" FontFamily="Consolas"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Text="Inteligencia artificial para trading"
                                   Foreground="#FF8B9DC3" FontSize="12" FontFamily="Consolas"
                                   Margin="0,0,0,36"/>

                        <!-- Features -->
                        <StackPanel x:Name="FeaturesPanel" Margin="0,0,0,36">
                            <TextBlock x:Name="CommercialMsg" TextWrapping="Wrap"
                                       Foreground="#FF06FFA5" FontSize="13" FontFamily="Consolas"
                                       FontWeight="Bold" Margin="0,0,0,20"/>

                            <StackPanel Margin="0,0,0,10">
                                <TextBlock Margin="0,0,0,10">
                                    <Run Text="✓ " Foreground="#FF06FFA5" FontWeight="Bold"/>
                                    <Run Text="Señales de IA para MetaTrader 5 y BingX" Foreground="#FFE0E6FF" FontSize="12" FontFamily="Consolas"/>
                                </TextBlock>
                                <TextBlock Margin="0,0,0,10">
                                    <Run Text="✓ " Foreground="#FF06FFA5" FontWeight="Bold"/>
                                    <Run Text="Aprendizaje automático de cada operación" Foreground="#FFE0E6FF" FontSize="12" FontFamily="Consolas"/>
                                </TextBlock>
                                <TextBlock Margin="0,0,0,10">
                                    <Run Text="✓ " Foreground="#FF06FFA5" FontWeight="Bold"/>
                                    <Run Text="Configuración sincronizada en la nube" Foreground="#FFE0E6FF" FontSize="12" FontFamily="Consolas"/>
                                </TextBlock>
                                <TextBlock Margin="0,0,0,10">
                                    <Run Text="✓ " Foreground="#FF06FFA5" FontWeight="Bold"/>
                                    <Run Text="Análisis de riesgo en tiempo real" Foreground="#FFE0E6FF" FontSize="12" FontFamily="Consolas"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="✓ " Foreground="#FF06FFA5" FontWeight="Bold"/>
                                    <Run Text="Licencias: mensual · anual · vitalicia" Foreground="#FFE0E6FF" FontSize="12" FontFamily="Consolas"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <!-- License badges -->
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#FF1E2749" BorderBrush="#FF4895EF" BorderThickness="1"
                                    CornerRadius="4" Padding="10,5" Margin="0,0,8,0">
                                <TextBlock Text="MENSUAL" FontSize="10" FontFamily="Consolas"
                                           Foreground="#FF4895EF" FontWeight="Bold"/>
                            </Border>
                            <Border Background="#FF1E2749" BorderBrush="#FF06FFA5" BorderThickness="1"
                                    CornerRadius="4" Padding="10,5" Margin="0,0,8,0">
                                <TextBlock Text="ANUAL" FontSize="10" FontFamily="Consolas"
                                           Foreground="#FF06FFA5" FontWeight="Bold"/>
                            </Border>
                            <Border Background="#FF1E2749" BorderBrush="#FFFFBE0B" BorderThickness="1"
                                    CornerRadius="4" Padding="10,5">
                                <TextBlock Text="VITALICIA" FontSize="10" FontFamily="Consolas"
                                           Foreground="#FFFFBE0B" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>

                        <TextBlock Text="© 2024 TradingBot Pro · Todos los derechos reservados"
                                   Foreground="#FF4A5280" FontSize="10" FontFamily="Consolas"
                                   Margin="0,32,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ══════════════════════════════════════════════════════════════
                 PANEL DERECHO — Formulario de login / registro
            ══════════════════════════════════════════════════════════════ -->
            <Grid Grid.Column="1" Background="#FF0A0E27">
                <!-- Botón cerrar -->
                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Margin="0,12,16,0" Width="28" Height="28"
                        Background="Transparent" Foreground="#FF8B9DC3"
                        FontSize="14" BorderThickness="0" Cursor="Hand"
                        Click="Close_Click"/>

                <!-- Formulario LOGIN -->
                <StackPanel x:Name="LoginPanel" VerticalAlignment="Center" Margin="44,0">
                    <TextBlock Text="Iniciar Sesión" FontSize="22" FontWeight="Bold"
                               Foreground="#FFE0E6FF" FontFamily="Consolas" Margin="0,0,0,6"/>
                    <TextBlock Text="Accede a tu cuenta de TradingBot Pro"
                               Foreground="#FF8B9DC3" FontSize="11" FontFamily="Consolas"
                               Margin="0,0,0,28"/>

                    <TextBlock Text="CORREO ELECTRÓNICO" Foreground="#FF8B9DC3"
                               FontSize="10" FontFamily="Consolas" FontWeight="Bold"
                               Margin="0,0,0,6"/>
                    <TextBox x:Name="LoginEmail" FontSize="13" Height="40"
                             Background="#FF252D55" Foreground="#FFE0E6FF"
                             BorderBrush="#FF2A3060" BorderThickness="1" Padding="10,8"
                             FontFamily="Consolas" Margin="0,0,0,16"/>

                    <TextBlock Text="CONTRASEÑA" Foreground="#FF8B9DC3"
                               FontSize="10" FontFamily="Consolas" FontWeight="Bold"
                               Margin="0,0,0,6"/>
                    <PasswordBox x:Name="LoginPassword" FontSize="13" Height="40"
                                 Background="#FF252D55" Foreground="#FFE0E6FF"
                                 BorderBrush="#FF2A3060" BorderThickness="1"
                                 FontFamily="Consolas" Padding="10,8"
                                 Margin="0,0,0,6"/>

                    <TextBlock x:Name="LoginError" Foreground="#FFFF006E"
                               FontSize="11" FontFamily="Consolas"
                               TextWrapping="Wrap" Margin="0,0,0,16" Visibility="Collapsed"/>

                    <Button x:Name="LoginBtn" Content="INICIAR SESIÓN"
                            Style="{StaticResource PrimaryButton}"
                            Height="42" FontSize="13" Margin="0,0,0,20"
                            Click="Login_Click"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="¿No tienes cuenta? " Foreground="#FF8B9DC3"
                                   FontSize="11" FontFamily="Consolas"/>
                        <Button Content="Regístrate aquí" Style="{StaticResource LinkButton}"
                                FontSize="11" Click="ShowRegister_Click"/>
                    </StackPanel>

                    <!-- Servidor URL configurable -->
                    <Expander Header="⚙ Configuración de servidor" Foreground="#FF4A5280"
                              FontSize="10" FontFamily="Consolas" Margin="0,24,0,0">
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="URL del servidor:" Foreground="#FF8B9DC3"
                                       FontSize="10" FontFamily="Consolas" Margin="0,0,0,4"/>
                            <TextBox x:Name="ServerUrlBox" FontSize="11" Height="34"
                                     Background="#FF252D55" Foreground="#FFE0E6FF"
                                     BorderBrush="#FF2A3060" BorderThickness="1"
                                     FontFamily="Consolas" Padding="8,6"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>

                <!-- Formulario REGISTRO -->
                <StackPanel x:Name="RegisterPanel" VerticalAlignment="Center"
                            Margin="44,0" Visibility="Collapsed">
                    <TextBlock Text="Crear Cuenta" FontSize="22" FontWeight="Bold"
                               Foreground="#FFE0E6FF" FontFamily="Consolas" Margin="0,0,0,6"/>
                    <TextBlock Text="Únete a TradingBot Pro"
                               Foreground="#FF8B9DC3" FontSize="11" FontFamily="Consolas"
                               Margin="0,0,0,20"/>

                    <Grid Margin="0,0,0,14">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/><ColumnDefinition Width="8"/><ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="NOMBRE" Foreground="#FF8B9DC3"
                                       FontSize="10" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBox x:Name="RegFirstName" Height="38" FontSize="12"
                                     Background="#FF252D55" Foreground="#FFE0E6FF"
                                     BorderBrush="#FF2A3060" BorderThickness="1"
                                     FontFamily="Consolas" Padding="8,6"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="APELLIDO" Foreground="#FF8B9DC3"
                                       FontSize="10" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBox x:Name="RegLastName" Height="38" FontSize="12"
                                     Background="#FF252D55" Foreground="#FFE0E6FF"
                                     BorderBrush="#FF2A3060" BorderThickness="1"
                                     FontFamily="Consolas" Padding="8,6"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="CORREO ELECTRÓNICO" Foreground="#FF8B9DC3"
                               FontSize="10" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,4"/>
                    <TextBox x:Name="RegEmail" Height="38" FontSize="12"
                             Background="#FF252D55" Foreground="#FFE0E6FF"
                             BorderBrush="#FF2A3060" BorderThickness="1"
                             FontFamily="Consolas" Padding="8,6" Margin="0,0,0,14"/>

                    <TextBlock Text="CONTRASEÑA" Foreground="#FF8B9DC3"
                               FontSize="10" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,4"/>
                    <PasswordBox x:Name="RegPassword" Height="38" FontSize="12"
                                 Background="#FF252D55" Foreground="#FFE0E6FF"
                                 BorderBrush="#FF2A3060" BorderThickness="1"
                                 FontFamily="Consolas" Padding="8,6" Margin="0,0,0,6"/>

                    <TextBlock x:Name="RegError" Foreground="#FFFF006E"
                               FontSize="11" FontFamily="Consolas"
                               TextWrapping="Wrap" Margin="0,0,0,14" Visibility="Collapsed"/>

                    <Button x:Name="RegisterBtn" Content="CREAR CUENTA"
                            Style="{StaticResource GreenButton}"
                            Height="42" FontSize="13" Margin="0,0,0,16"
                            Click="Register_Click"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="¿Ya tienes cuenta? " Foreground="#FF8B9DC3"
                                   FontSize="11" FontFamily="Consolas"/>
                        <Button Content="Inicia sesión" Style="{StaticResource LinkButton}"
                                FontSize="11" Click="ShowLogin_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
