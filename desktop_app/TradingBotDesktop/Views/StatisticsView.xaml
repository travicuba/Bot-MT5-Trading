<Page x:Class="TradingBotDesktop.Views.StatisticsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource SecondaryBgBrush}"
      Title="Estadisticas">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Estadisticas" Style="{StaticResource PageTitle}"/>

            <!-- RESUMEN -->
            <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,16">
                <Border Style="{StaticResource CardPanel}" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock x:Name="StTotalTrades" Text="0" Style="{StaticResource StatValue}"/>
                        <TextBlock Text="Total Trades"   Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardPanel}" Margin="4,0">
                    <StackPanel>
                        <TextBlock x:Name="StWinRate" Text="0%"
                                   Style="{StaticResource StatValue}"
                                   Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="Win Rate Global" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardPanel}" Margin="4,0">
                    <StackPanel>
                        <TextBlock x:Name="StTotalPips" Text="0"
                                   Style="{StaticResource StatValue}"/>
                        <TextBlock Text="Pips Totales"  Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardPanel}" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock x:Name="StWinsLosses" Text="0 / 0"
                                   Style="{StaticResource StatValue}"
                                   FontSize="22"/>
                        <TextBlock Text="Ganadas / Perdidas" Style="{StaticResource StatLabel}"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- ESTADISTICAS POR PERIODO -->
            <Grid Grid.Row="2" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Hoy -->
                <Border Grid.Column="0" Style="{StaticResource CardPanel}" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="HOY" Style="{StaticResource SectionTitle}"
                                   Foreground="{StaticResource AccentBrush}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="TodTrades" Text="0" FontSize="24" FontWeight="Bold"/>
                                <TextBlock Text="Trades"      Style="{StaticResource StatLabel}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock x:Name="TodWinRate" Text="0%" FontSize="24" FontWeight="Bold"
                                           Foreground="{StaticResource SuccessBrush}"/>
                                <TextBlock Text="Win Rate"    Style="{StaticResource StatLabel}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock x:Name="TodPips" Text="0" FontSize="24" FontWeight="Bold"/>
                                <TextBlock Text="Pips"       Style="{StaticResource StatLabel}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Esta semana -->
                <Border Grid.Column="1" Style="{StaticResource CardPanel}" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ESTA SEMANA" Style="{StaticResource SectionTitle}"
                                   Foreground="{StaticResource WarningBrush}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="WkTrades" Text="0" FontSize="24" FontWeight="Bold"/>
                                <TextBlock Text="Trades"     Style="{StaticResource StatLabel}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock x:Name="WkWinRate" Text="0%" FontSize="24" FontWeight="Bold"
                                           Foreground="{StaticResource SuccessBrush}"/>
                                <TextBlock Text="Win Rate"   Style="{StaticResource StatLabel}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock x:Name="WkPips" Text="0" FontSize="24" FontWeight="Bold"/>
                                <TextBlock Text="Pips"      Style="{StaticResource StatLabel}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ESTADISTICAS POR ESTRATEGIA -->
            <Border Grid.Row="3" Style="{StaticResource CardPanel}">
                <StackPanel>
                    <TextBlock Text="POR ESTRATEGIA" Style="{StaticResource SectionTitle}"/>
                    <DataGrid x:Name="SetupGrid" AutoGenerateColumns="False"
                              MaxHeight="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Estrategia" Binding="{Binding Name}"    Width="*"/>
                            <DataGridTextColumn Header="Trades"     Binding="{Binding Trades}"  Width="80"/>
                            <DataGridTextColumn Header="Ganadas"    Binding="{Binding Wins}"    Width="80"/>
                            <DataGridTextColumn Header="Perdidas"   Binding="{Binding Losses}"  Width="80"/>
                            <DataGridTextColumn Header="Win Rate"   Binding="{Binding WinRateDisplay}" Width="90"/>
                            <DataGridTextColumn Header="Pips"       Binding="{Binding PipsDisplay}"    Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Content="Actualizar" Style="{StaticResource SecondaryButton}"
                            HorizontalAlignment="Right" Margin="0,12,0,0"
                            Click="BtnRefresh_Click"/>
                </StackPanel>
            </Border>

        </Grid>
    </ScrollViewer>
</Page>
